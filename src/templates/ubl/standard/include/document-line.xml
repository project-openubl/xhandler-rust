
{% macro line(item) %}
        {% if item.isc_base_imponible %}
        <cbc:LineExtensionAmount currencyID="{{moneda}}">{{item.isc_base_imponible | round(method="ceil", precision=2) | currency}}</cbc:LineExtensionAmount>
        {% else %}
        <cbc:LineExtensionAmount currencyID="{{moneda}}">{{item.igv_base_imponible | round(method="ceil", precision=2) | currency}}</cbc:LineExtensionAmount>
        {% endif %}
        <cac:PricingReference>
            <cac:AlternativeConditionPrice>
                <cbc:PriceAmount currencyID="{{moneda}}">{{item.precio_referencia | round(method="ceil", precision=2) | currency}}</cbc:PriceAmount>
                <cbc:PriceTypeCode listAgencyName="PE:SUNAT" listName="Tipo de Precio" listURI="urn:pe:gob:sunat:cpe:see:gem:catalogos:catalogo16">{{item.precio_referencia_tipo}}</cbc:PriceTypeCode>
            </cac:AlternativeConditionPrice>
        </cac:PricingReference>
        <cac:TaxTotal>
            <cbc:TaxAmount currencyID="{{moneda}}">{{item.total_impuestos | round(method="ceil", precision=2) | currency}}</cbc:TaxAmount>
            {% if item.isc %}
            <cac:TaxSubtotal>
                <cbc:TaxableAmount currencyID="{{moneda}}">{{item.isc_base_imponible | round(method="ceil", precision=2) | currency}}</cbc:TaxableAmount>
                <cbc:TaxAmount currencyID="{{moneda}}">{{item.isc | round(method="ceil", precision=2) | currency}}</cbc:TaxAmount>
                <cac:TaxCategory>
                    <cbc:Percent>{{item.tasa_isc * 100 | round(method="ceil", precision=2) | currency}}</cbc:Percent>
                    <cbc:TierRange>{{item.isc_tipo}}</cbc:TierRange>
                    <cac:TaxScheme>
                        <cbc:ID>2000</cbc:ID>
                        <cbc:Name>ISC</cbc:Name>
                        <cbc:TaxTypeCode>EXC</cbc:TaxTypeCode>
                    </cac:TaxScheme>
                </cac:TaxCategory>
            </cac:TaxSubtotal>
            {% endif %}
            <cac:TaxSubtotal>
                <cbc:TaxableAmount currencyID="{{moneda}}">{{item.igv_base_imponible | round(method="ceil", precision=2) | currency}}</cbc:TaxableAmount>
                <cbc:TaxAmount currencyID="{{moneda}}">{{item.igv | round(method="ceil", precision=2) | currency}}</cbc:TaxAmount>
                <cac:TaxCategory>
                    <cbc:ID schemeAgencyName="United Nations Economic Commission for Europe" schemeID="UN/ECE 5305" schemeName="Tax Category Identifier">S</cbc:ID>
                    <cbc:Percent>{{item.igv_tasa * 100 | round(method="ceil", precision=2) | currency}}</cbc:Percent>
                    <cbc:TaxExemptionReasonCode listAgencyName="PE:SUNAT" listName="Afectacion del IGV" listURI="urn:pe:gob:sunat:cpe:see:gem:catalogos:catalogo07">{{item.igv_tipo}}</cbc:TaxExemptionReasonCode>
                    <cac:TaxScheme>
                        <cbc:ID schemeAgencyName="PE:SUNAT" schemeID="UN/ECE 5153" schemeName="Codigo de tributos">{{catalog7_taxcategory(igv_tipo=item.igv_tipo, field="code")}}</cbc:ID>
                        <cbc:Name>{{catalog7_taxcategory(igv_tipo=item.igv_tipo, field="nombre")}}</cbc:Name>
                        <cbc:TaxTypeCode>{{catalog7_taxcategory(igv_tipo=item.igv_tipo, field="tipo")}}</cbc:TaxTypeCode>
                    </cac:TaxScheme>
                </cac:TaxCategory>
            </cac:TaxSubtotal>
            {% if item.icb %}
            <cac:TaxSubtotal>
                <cbc:TaxAmount currencyID="{{moneda}}">{{item.icb | round(method="ceil", precision=2) | currency}}</cbc:TaxAmount>
                <cbc:BaseUnitMeasure unitCode="{{item.unidad_medida}}">{{item.cantidad}}</cbc:BaseUnitMeasure>
                <cac:TaxCategory>
                    <cbc:PerUnitAmount currencyID="{{moneda}}">{{item.tasaIcb | round(method="ceil", precision=2) | currency}}</cbc:PerUnitAmount>
                    <cac:TaxScheme>
                        <cbc:ID schemeAgencyName="PE:SUNAT" schemeID="UN/ECE 5153" schemeName="Codigo de tributos">7152</cbc:ID>
                        <cbc:Name>ICBPER</cbc:Name>
                        <cbc:TaxTypeCode>OTH</cbc:TaxTypeCode>
                    </cac:TaxScheme>
                </cac:TaxCategory>
            </cac:TaxSubtotal>
            {% endif %}
        </cac:TaxTotal>
        <cac:Item>
            <cbc:Description><![CDATA[{{item.descripcion | escape}}]]></cbc:Description>
        </cac:Item>
        <cac:Price>
            <cbc:PriceAmount currencyID="{{moneda}}">{{item.precio | round(method="ceil", precision=2) | currency}}</cbc:PriceAmount>
        </cac:Price>
{% endmacro line %}

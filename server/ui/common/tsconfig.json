{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "paths": {
      "@branding/strings.json": ["./src/branding-strings-stub.json"]
    }
  }
}
